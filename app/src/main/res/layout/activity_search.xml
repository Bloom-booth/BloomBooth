<?xml version="1.0" encoding="utf-8"?>
<!--activity_search.xml-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="30dp"
    android:orientation="vertical">
    <include
        android:id="@+id/header"
        layout="@layout/header_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp" />
    <!--btn_back-->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="back"
        android:src="@drawable/ic_back" />
    <!-- boothName -->
    <EditText
        android:id="@+id/booth_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="부스 검색"
        android:inputType="text" />
    <!-- boothCnt -->
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부스 최소 개수"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Spinner
            android:id="@+id/booth_cnt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- accsCnt -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="악세서리 개수" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/accsCnt1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:text="없음"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/background_round" />
        <TextView
            android:id="@+id/accsCnt2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:text="적음"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/background_round" />
        <TextView
            android:id="@+id/accsCnt3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:text="보통"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/background_round" />
        <TextView
            android:id="@+id/accsCnt4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="많음"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/background_round" />
    </LinearLayout>
    <!-- accsCondi -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="악세서리 상태" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/accsCondi1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:text="없음"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/background_round" />
        <TextView
            android:id="@+id/accsCondi2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:text="나쁨"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/background_round" />
        <TextView
            android:id="@+id/accsCondi3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:text="보통"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/background_round" />
        <TextView
            android:id="@+id/accsCondi4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="좋음"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/background_round" />
    </LinearLayout>
    <!-- retouching -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="보정" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/retouching1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:text="없음"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/background_round" />
        <TextView
            android:id="@+id/retouching2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:text="나쁨"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/background_round" />
        <TextView
            android:id="@+id/retouching3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:text="보통"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/background_round" />
        <TextView
            android:id="@+id/retouching4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="좋음"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/background_round" />
    </LinearLayout>
    <TextView
        android:id="@+id/btn_search"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/dark_background_round"
        android:gravity="center"
        android:text="검색하기"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>
</LinearLayout>